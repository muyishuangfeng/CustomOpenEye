<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_icon_splash"
        android:layout_width="61dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_action_focus_white_no_margin" />

    <TextView
        android:id="@+id/tv_name_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon_splash"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/text_name"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        app:fontFamily="@font/Lobster-1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_english"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/text_name"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_english_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_intro"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:text="@string/text_content"
        android:textColor="@color/colorWhite"
        app:fontFamily="@font/Lobster-1" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="@string/text_content"
        android:textColor="@color/colorWhite" />

</RelativeLayout>